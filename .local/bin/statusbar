#!/bin/bash

dte(){
dte="$(date "+%d/%m/%Y %T")"
echo -e " $dte"
}

bl(){
bl="$(xbacklight -get | awk  '{printf "%.0f\n", $1}')%"
echo -e " $bl"
}

vol(){
vol="$(pactl list sinks | grep '^[[:space:]]Volume:' | \
	    head -n $(( $SINK + 1 )) | tail -n 1 | sed -e 's,.* \([0-9][0-9]*\)%.*,\1,')%"
echo -e " $vol"
}

wifi(){
wifi="$(iw dev | grep ssid | awk '{print $2}')"
echo -e " $wifi"
}

while true; do
	xsetroot -name " $(battery) | $(wifi) | $(vol) | $(bl) | $(dte)" 
	sleep 1
done
